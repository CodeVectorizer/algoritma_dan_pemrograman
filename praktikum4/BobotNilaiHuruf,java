// Pertama kita import dulu script dibawah ini
import java.util.Scanner;

/**
 *
 * @author CodeVector-PC
 */
public class BobotNilaiHuruf {
    public static void main(String[] args){
        // kita inisialisasi scanner menggunakan alias input 
        Scanner input = new Scanner(System.in);
        
        // Memberi tahu user untuk memasukkan inputan
        System.out.println("Masukkan Satu Huruf (A-E): ");
         // Mengambil inputan user dan menyimpan pada variable huruf
        String huruf = input.nextLine();
        
        // Melakukan pemrosesan output menggunakan operator kondisi(Switch) dan operator logic
        switch(huruf){
            case "A":
                System.out.println(4);
                break;
            case "B":
                System.out.println(3);
                break;
            case "C":
                System.out.println(2);
                break;
            case "D":
                System.out.println(1);
                break;
            case "E":
                System.out.println(0);
                break;
            default:
                System.out.println("Huruf yang anda masukkan salah");
        }
    }
}
